{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Happy Shop{% endblock %}</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">
</head>
<body>
{% block header %}
    <nav class="navbar navbar-dark bg-dark sticky-top space-left px-4">
        <div>
            <a href="{{ path('home') }}" class="navbar-brand ">
                Shop
            </a>
        </div>

        <div>
            <nav class="navbar navbar-expand-sm">
                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item">
                            <a href="{{ path('user.index') }}" class="btn text-light">
                                Hi {{ app.user.email }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_logout') }}" class="btn text-light">
                                Logout
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a href="{{ path('app_login') }}" class="btn text-light">
                                Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_register') }}" class="btn text-light">
                                Register
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a href="{{ path('cart') }}" class="btn btn-light">
                            Cart
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </nav>
{% endblock %}

{% block body %}{% endblock %}
</body>
</html>
