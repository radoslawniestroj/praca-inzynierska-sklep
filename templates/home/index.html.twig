{% extends 'base.html.twig' %}

{% block body %}
    <script src="{{ asset('build/js/home/index.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/home/index.css') }}" />

    <div class="container">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ asset('build/images/1_slider.jpg') }}" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('build/images/2_slider.jpg') }}" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('build/images/3_slider.jpg') }}" alt="Third slide">
                </div>
            </div>
            <a id="carousel-prev" class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a id="carousel-next" class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon text-dark" aria-hidden="true"></span>
            </a>
        </div>

        <h1 class="mt-3 mb-4">Products</h1>
        <div class="row">
            {{ render(controller(
                'App\\Controller\\ProductController::list', {'products': products}
            )) }}
        </div>
    </div>
{% endblock %}
